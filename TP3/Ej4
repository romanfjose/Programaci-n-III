	<?php
	


	$numero1 = $_GET['numero1'] ?? "";
	
	$reverso = 0;  
	    
	 
	while ($numero1 > 1)  
	{  
	$rem = $numero1 % 10;  
	$reverso = ($reverso * 10) + $rem;  
	$numero1 = ($numero1 / 10);   
	}  
	
	echo "El reverso es: $reverso";  
	  ?>
